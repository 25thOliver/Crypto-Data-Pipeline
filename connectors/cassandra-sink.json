{
  "name": "cassandra-sink",
  "config": {
    "connector.class": "com.datastax.oss.kafka.sink.CassandraSinkConnector",
    "tasks.max": "1",
    "contactPoints": "cassandra",
    "port": "9042",
    "loadBalancing.localDc": "datacenter1",
  "keyspace": "crypto_keyspace",

  "topics": "crypto_crypto_prices,crypto_crypto_order_book,crypto_crypto_recent_trades,crypto_crypto_24h_stats,crypto_crypto_klines",

  "topic.crypto_crypto_prices.crypto_keyspace.crypto_prices.mapping": "symbol=value.symbol, price=value.price, fetch_time=value.fetch_time",
  "topic.crypto_crypto_order_book.crypto_keyspace.crypto_order_book.mapping": "symbol=value.symbol, side=value.side, price=value.price, quantity=value.quantity, fetch_time=value.fetch_time",
  "topic.crypto_crypto_recent_trades.crypto_keyspace.crypto_recent_trades.mapping": "symbol=value.symbol, price=value.price, qty=value.qty, isbuyermaker=value.isBuyerMaker, fetch_time=value.fetch_time",
  "topic.crypto_crypto_24h_stats.crypto_keyspace.crypto_24h_stats.mapping": "symbol=value.symbol, price=value.lastPrice, price_change_percent=value.priceChangePercent, fetch_time=value.fetch_time",
  "topic.crypto_crypto_klines.crypto_keyspace.crypto_klines.mapping": "symbol=value.symbol, open_time=value.open_time, open=value.open, high=value.high, low=value.low, close=value.close, volume=value.volume, num_trades=value.num_trades, fetch_time=value.fetch_time",

  "topic.crypto_crypto_prices.crypto_keyspace.crypto_prices.consistencyLevel": "LOCAL_QUORUM",
  "topic.crypto_crypto_order_book.crypto_keyspace.crypto_order_book.consistencyLevel": "LOCAL_QUORUM",
  "topic.crypto_crypto_recent_trades.crypto_keyspace.crypto_recent_trades.consistencyLevel": "LOCAL_QUORUM",
  "topic.crypto_crypto_24h_stats.crypto_keyspace.crypto_24h_stats.consistencyLevel": "LOCAL_QUORUM",
  "topic.crypto_crypto_klines.crypto_keyspace.crypto_klines.consistencyLevel": "LOCAL_QUORUM",

    "auth.username": "cassandra",
    "auth.password": "cassandra",
    "topicSelectionPolicy.class": "com.datastax.oss.kafka.sink.selector.AllTopicSelectionPolicy"
  }
}
